{
  "name": "edge-rag-system",
  "version": "1.0.0",
  "description": "Edge-first RAG system leveraging Cloudflare's infrastructure",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev src/index.ts --local --experimental-vectorize-bind-to-prod",
    "build": "tsc",
    "test": "concurrently \"wrangler dev src/index.ts --local --port 8787 --experimental-vectorize-bind-to-prod\" \"wait-on tcp:8787 && vitest\"",
    "test:watch": "concurrently \"wrangler dev src/index.ts --local --port 8787 --experimental-vectorize-bind-to-prod\" \"wait-on tcp:8787 && vitest --watch\"",
    "deploy": "wrangler deploy",
    "setup:db": "wrangler d1 execute rag_system --local --file=./scripts/schema.sql",
    "setup": "ts-node scripts/setup.ts",
    "pretest": "npm run setup"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "hono": "^3.12.6"
  },
  "devDependencies": {
    "@cloudflare/d1": "^1.4.1",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@rollup/plugin-inject": "^5.0.5",
    "@types/jest": "^29.5.11",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.14",
    "jest": "^29.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0",
    "wait-on": "^7.2.0",
    "wrangler": "^3.24.0"
  }
}

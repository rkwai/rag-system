{
  "query": "Schedule a one-hour product demo with the client for next week",
  "ground_truth": {
    "function_calls": [
      {
        "name": "check_availability",
        "args": {
          "start_date": "next_monday",
          "end_date": "next_wednesday",
          "time_range": "9:00-12:00",
          "duration": "60"
        }
      },
      {
        "name": "create_meeting",
        "args": {
          "title": "Product Demo - Client Meeting",
          "start_time": "<available_slot>",
          "duration": "60",
          "attendees": ["product.manager@company.com", "client1@client.com", "client2@client.com", "client3@client.com"],
          "location": "virtual",
          "meeting_type": "video_conference"
        }
      },
      {
        "name": "send_calendar_invites",
        "args": {
          "meeting_id": "<meeting_id>"
        }
      }
    ],
    "expected_response": "Product demo scheduled successfully for next week. Calendar invites sent to all participants."
  },
  "context": "Available slots: Mon-Wed 9AM-12PM. Participants: Product Manager, Client Team (3 people). Virtual meeting preferred."
}
